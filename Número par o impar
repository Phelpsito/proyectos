#include <iostream>

using namespace std;

int main() {
    int numero;

    cout << "Por favor, ingrese un numero: \n\n" ;
    cin >> numero;

    if (numero % 2 == 0) {
        cout << "\nEl número ingresado es par." << endl;
    } else {
        cout << "\nEl número ingresado es impar." << endl;
    }

    return 0;
}
